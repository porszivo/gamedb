generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  gameEntries GameEntry[]
  
  @@map("users")
}

model Game {
  id          Int      @id
  name        String
  slug        String?
  summary     String?
  releaseDate DateTime?
  coverUrl    String?
  platforms   String[] // Array von Platform Namen
  genres      String[] // Array von Genre Namen
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  gameEntries GameEntry[]
  
  @@map("games")
}

model GameEntry {
  id       String @id @default(cuid())
  userId   String
  gameId   Int
  platform String?
  status   GameStatus @default(OWNED)
  rating   Int? // 1-10
  notes    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  @@unique([userId, gameId, platform])
  @@map("game_entries")
}

enum GameStatus {
  OWNED
  WISHLIST
  PLAYED
  COMPLETED
}